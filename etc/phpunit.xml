<?xml version="1.0" encoding="UTF-8" ?>

<phpunit backupGlobals="false" backupStaticAttributes="false" colors="true" convertErrorsToExceptions="true"
         convertNoticesToExceptions="true" convertWarningsToExceptions="true" processIsolation="false"
         stopOnFailure="false" syntaxCheck="false">

    <filter>
        <whitelist>
            <directory suffix=".php">../app/Controller</directory>
            <directory suffix=".php">../app/Model</directory>
            <directory suffix=".php">../app/View</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="../target/coverage" charset="UTF-8" yui="true" highlight="true"/>
        <log type="coverage-clover" target="../target/coverage.xml"/>
    </logging>
</phpunit>
